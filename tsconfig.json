{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode - React 19 & Vite 6 optimized */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "allowJs": true,
    "jsx": "react-jsx",

    /* Linting - Enhanced for React 19 */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,    /* React 19 & TypeScript 5.7 specific */
    // "types": ["vite/client"], // Moved to vite-env.d.ts for better compatibility

    "paths": {
      "@/*" :  ["./*"]
    }
  },
  "include": ["src/**/*", "*.tsx", "components/**/*", "hooks/**/*", "vite-env.d.ts", "types.ts", "data.ts", "characterProfiles.ts", "characterTimings.ts", "themes.ts", "stylingConstants.ts", "metadata.json"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
